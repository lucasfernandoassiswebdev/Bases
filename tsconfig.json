{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "target": "ES6",
        "module": "commonjs",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types"],
        "types": ["node"]
    },
    "include": [
        "lib/**/*.ts",
        "lib/*.ts",
        "bin/**/.ts",
        "bin/*.ts",
    ],
    "exclude": [        
        "dist"
    ]
}