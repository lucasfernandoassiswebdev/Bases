{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "incremental": true,
        "target": "ES6",
        "module": "commonjs",
        "declaration": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "outDir": "dist",
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "dist"
        ]
    },
    "include": [
        "lib/**/*.ts",
        "lib/*.ts",
        "bin/**/.ts",
        "bin/*.ts",
    ],
    "exclude": [
        "./node_modules"
    ],
    "buildOnSave": true,
    "compileOnSave": true
}